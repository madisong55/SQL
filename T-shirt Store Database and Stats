--Display database
SELECT * FROM shirts;

--Display database ordered by price
SELECT * FROM shirts ORDER BY price;

--Which shirts are greater than $13?
SELECT * FROM shirts WHERE price >13;

--What is the price of the most expesive shirt?
SELECT MAX (price) FROM shirts;

--What is the price of the least expensive shirt?
SELECT MIN (price) FROM shirts;
